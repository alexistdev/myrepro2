<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapps2"
    android:padding="16dp"
    tools:context=".Quiz.QuizActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtNilai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quiz2"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/txtPertanyaanCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quiz4"
            android:textColor="@android:color/black"
            android:layout_below="@+id/txtNilai"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/timerku"
        android:layout_marginStart="200dp"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtWaktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="@android:color/black"
            android:text="@string/quiz5"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_below="@+id/timerku"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/gbrPertanyaan"
            android:src="@drawable/steaming2"
            android:contentDescription="@string/quiz1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtPertanyaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quiz10"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/black"/>

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioPilihan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quiz6"/>
            <RadioButton
                android:id="@+id/radioPilihan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quiz7"/>
            <RadioButton
                android:id="@+id/radioPilihan3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quiz8"/>
            <RadioButton
                android:id="@+id/radioPilihan4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quiz9"/>
            <RadioButton
                android:id="@+id/radioPilihan5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quiz9"/>
        </RadioGroup>
        <Button
            android:id="@+id/btnSimpan"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quiz11"/>

    </LinearLayout>







</RelativeLayout>